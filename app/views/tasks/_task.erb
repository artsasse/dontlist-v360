<% unless task.created_at.nil? %>
<div class="task">
    <% status = if task.checked; then "[X]" else "[ ]" end %>
    <p><%= status %> <%= task.title %></p>
    <div class="task-options">
        <% status = if task.checked? then "Uncheck" else "Check" end%>
        <%= link_to status, 
            [task.list, task, task: { checked: !task.checked? }],
            data: { turbo_method: :patch } 
        %> 
        |
        <%= link_to "Edit", edit_list_task_path(task.list, task) %>
        |
        <%= link_to "Delete", [task.list, task], data: {
            turbo_method: :delete
        } %>
    </div>
</div>
<% end %>